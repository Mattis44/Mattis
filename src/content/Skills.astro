---
import Skill from "../components/Container/Skill.astro";

import HTML from "../assets/icons/Skills/html.svg";
import CSS from "../assets/icons/Skills/css.svg";
import JS from "../assets/icons/Skills/js.svg";
import TS from "../assets/icons/Skills/ts.svg";
import SQL from "../assets/icons/Skills/sql.svg";
import CPP from "../assets/icons/Skills/cpp.svg";
import RS from "../assets/icons/Skills/rs.svg";
import JSX from "../assets/icons/Skills/jsx.svg";
import NEXT from "../assets/icons/Skills/next.svg";
import ZUS from "../assets/icons/Skills/zus.svg";
import TAILWIND from "../assets/icons/Skills/tailwind.svg";
import ASTRO from "../assets/icons/Skills/astro.svg";
import VUE from "../assets/icons/Skills/vue.svg";
import SVELTE from "../assets/icons/Skills/svelte.svg";
import NODE from "../assets/icons/Skills/node.svg";
import EXPRESS from "../assets/icons/Skills/express.svg";
import ZOD from "../assets/icons/Skills/zod.svg";
import PRISMA from "../assets/icons/Skills/prisma.svg";
import MARIADB from "../assets/icons/Skills/mariadb.svg";
import POSTGRES from "../assets/icons/Skills/postgres.svg";
import MONGO from "../assets/icons/Skills/mongo.svg";
import GIT from "../assets/icons/Skills/git.svg";
import DOCKER from "../assets/icons/Skills/docker.svg";
import GHACTIONS from "../assets/icons/Skills/ghactions.svg";
import NGINX from "../assets/icons/Skills/nginx.svg";
import LINUX from "../assets/icons/Skills/linux.svg";
import CICD from "../assets/icons/Skills/cicd.svg";
import CLOUDFLARE from "../assets/icons/Skills/cloudflare.svg";
import CategoryTitle from "../components/Container/CategoryTitle.astro";

const SKILLS = [
    {
        name: "Core / Languages",
        skills: [
            { name: "HTML", icon: HTML, level: "Expert" },
            { name: "CSS", icon: CSS, level: "Expert" },
            { name: "JavaScript", icon: JS, level: "Expert" },
            { name: "TypeScript", icon: TS, level: "Experienced" },
            { name: "SQL", icon: SQL, level: "Experienced" },
            { name: "C++", icon: CPP, level: "Familiar" },
            { name: "Rust", icon: RS, level: "Familiar" },
        ],
    },
    {
        name: "Frontend",
        skills: [
            { name: "React", icon: JSX, level: "Expert" },
            { name: "Next.js", icon: NEXT, level: "Experienced" },
            { name: "Zustand", icon: ZUS, level: "Experienced" },
            { name: "TailwindCSS", icon: TAILWIND, level: "Experienced" },
            { name: "Astro", icon: ASTRO, level: "Experienced" },
            { name: "Vue.js", icon: VUE, level: "Familiar" },
            { name: "Svelte", icon: SVELTE, level: "Familiar" },
        ],
    },
    {
        name: "Backend / API",
        skills: [
            { name: "Node.js", icon: NODE, level: "Expert" },
            { name: "Express", icon: EXPRESS, level: "Experienced" },
            { name: "Zod", icon: ZOD, level: "Experienced" },
            { name: "Prisma", icon: PRISMA, level: "Experienced" },
            { name: "MariaDB", icon: MARIADB, level: "Experienced" },
            { name: "PostgreSQL", icon: POSTGRES, level: "Experienced" },
            { name: "MongoDB", icon: MONGO, level: "Experienced" },
        ],
    },
    {
        name: "DevOps / Cloud / Tools",
        skills: [
            { name: "Git", icon: GIT, level: "Expert" },
            { name: "Docker", icon: DOCKER, level: "Experienced" },
            { name: "GH Actions", icon: GHACTIONS, level: "Experienced" },
            { name: "Nginx", icon: NGINX, level: "Experienced" },
            { name: "Linux", icon: LINUX, level: "Experienced" },
            { name: "CI/CD", icon: CICD, level: "Experienced" },
            { name: "Cloudflare", icon: CLOUDFLARE, level: "Experienced" },
        ],
    },
];
---

<section class="my-8" id="skills">
    <CategoryTitle title="Skills" />

    <div class="space-y-6">
        {
            SKILLS.map((group) => (
                <section>
                    <h5
                        class="inline-block px-3 py-1 rounded-lg 
       bg-white/10 backdrop-blur border border-white/20 
       text-sm font-semibold text-white/80 tracking-wide 
       mb-3"
                    >
                        {group.name}
                    </h5>

                    <div class="flex flex-wrap justify-center gap-4">
                        {group.skills.map((s) => (
                            <Skill
                                name={s.name}
                                icon={s.icon}
                                level={s.level}
                            />
                        ))}
                    </div>
                </section>
            ))
        }
    </div>
</section>
