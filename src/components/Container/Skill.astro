---
import type { SvgComponent } from "astro/types";

type Props = {
    name: string;
    icon: SvgComponent;
    level: string;
};
const { name, icon: IconComponent, level } = Astro.props as Props;
---

<div
    class="flex flex-col items-center justify-center w-28 h-28 bg-(--skill-bg-color) rounded-2xl p-4 gap-1 glass-card"
>
    <IconComponent />
    <p class="text-(--skill-text-color) text-sm font-medium text-center">
        {name}
    </p>
    <span
        class="text-[10px] uppercase tracking-wide
               text-white/40 bg-white/5 px-2 py-0.5 rounded-md"
    >
        {level}
    </span>
</div>
